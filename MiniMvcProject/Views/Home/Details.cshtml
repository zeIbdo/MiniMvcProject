@using MiniMvcProject.Application.ViewModels.ProductImageViewModels
@model ProductViewModel

<main class="inner-page-sec-padding-bottom">
    <div class="container">
        <div class="row  mb--60">
            <div class="col-lg-5 mb--30">
                <!-- Product Details Slider Big Image-->
                <div class="product-details-slider sb-slick-slider arrow-type-two" data-slick-setting='{
              "slidesToShow": 1,
              "arrows": false,
              "fade": true,
              "draggable": false,
              "swipe": false,
              "asNavFor": ".product-slider-nav"
              }'>

                    @foreach (var img in Model.Images!)
                    {


                        <div class="single-slide">
                            <img src="@img.ImageUrl" alt="" style="height:370px; width:345px;">
                        </div>

                    }

                </div>
                <!-- Product Details Slider Nav -->
                <div class="mt--30 product-slider-nav sb-slick-slider arrow-type-two" data-slick-setting='{
            "infinite":true,
              "autoplay": true,
              "autoplaySpeed": 8000,
              "slidesToShow": 4,
              "arrows": true,
              "prevArrow":{"buttonClass": "slick-prev","iconClass":"fa fa-chevron-left"},
              "nextArrow":{"buttonClass": "slick-next","iconClass":"fa fa-chevron-right"},
              "asNavFor": ".product-details-slider",
              "focusOnSelect": true
              }'>

                    @foreach (var img in Model.Images!)
                    {


                        <div class="single-slide">
                            <img src="@img.ImageUrl" alt="" style="height:117px; width:100px;">
                        </div>

                    }

                </div>
            </div>
            @{
                string tags = "";
                if (Model.Tags != null)
                    tags = string.Join(", ", Model.Tags.Select(x => x.Name));
            }
            <div class="col-lg-7">
                <div class="product-details-info pl-lg--30 ">
                    <p class="tag-block">
                        Tags: @tags
                        <h3 class="product-title">@Model.Name</h3>
                        <ul class="list-unstyled">
                            <li>Brands: <a href="#" class="list-value font-weight-bold"> @Model.Brand</a></li>
                            <li>Product Code: <span class="list-value"> @Model.Code</span></li>
                            <li>Reward Points: <span class="list-value"> @Model.RewardPoints</span></li>
                            <li>Views: <span class="list-value"> @Model.ViewCount</span></li>
                            @if (Model.InStock)
                            {
                                <li>Availability: <span class="list-value"> In Stock</span></li>

                            }
                            else
                            {
                                <li>Availability: <span class="list-value">Not in Stock</span></li>

                            }
                        </ul>
                        <div class="price-block">
                            @if (Model.DiscountPrice != 0)
                            {

                                <span class="price-new">£@Model.DiscountPrice</span>
                                <del class="price-old">£@Model.MainPrice</del>
                            }
                            else
                            {
                                <span class="price-new">£@Model.MainPrice</span>

                            }
                        </div>
                        <div class="rating-widget">
                            <div class="rating-block">
                                @for (int i = 0; i < Model.Rating; i++)
                                {
                                    <span class="fas fa-star star_on"></span>

                                }
                                @for (int i = 0; i < (5 - Model.Rating); i++)
                                {
                                    <span class="fas fa-star"></span>

                                }
                            </div>
                            <div class="review-widget">
                                <a href="#">(1 Reviews)</a> <span>|</span>
                                <a href="#">Write a review</a>
                            </div>
                        </div>
                        <article class="product-details-article">
                            <h4 class="sr-only">Product Summery</h4>
                            <p>
                                @Model.Description
                            </p>
                        </article>
                        <div class="add-to-cart-row">
                            <div class="count-input-block">
                                <span class="widget-label">Qty</span>
                                <input type="number" class="form-control text-center" value="1">
                            </div>
                            <div class="add-cart-btn">
                                <a href="#" class="btn btn-outlined--primary">
                                    <span class="plus-icon">+</span>Add to
                                    Cart
                                </a>
                            </div>
                        </div>

                </div>
            </div>
        </div>
        </div>  
</main>