                                    {"breakpoint":1200, "settings": {"slidesToShow": 1} },
                                    {"breakpoint":992, "settings": {"slidesToShow": 1} },
                                    {"breakpoint":768, "settings": {"slidesToShow": 1} },
                                    {"breakpoint":575, "settings": {"slidesToShow": 1} },
                                    {"breakpoint":490, "settings": {"slidesToShow": 1} }
                                ]'>
                        @foreach (var item in Model.Products)
                        {
                            if (item.BasketItems?.Count != 0)
                            {

                                <div class="single-slide">
                                    <div class="product-card card-style-list">
                                        <div class="card-image">
                                            <img src="@item.Images?.FirstOrDefault(x=>x.IsMain==true)!.ImageUrl" style="height:100px; width:90px;" alt="">
                                        </div>
                                        <div class="product-card--body">
                                            <div class="product-header">
                                                <a href="#" class="author">
                                                    @item.Name
                                                </a>
                                                <h3>
                                                    <a href="product-details.html">
                                                        @item.Description
                                                    </a>
                                                </h3>
                                            </div>
                                            @{
                                                var discount = Math.Round(((item.MainPrice - item.DiscountPrice) / item.MainPrice), 1);
                                            }
                                            @if (item.DiscountPrice != 0)
                                            {

                                                <div class="price-block">
                                                    <span class="price">£@item.DiscountPrice</span>
                                                    <del class="price-old">£@item.MainPrice</del>
                                                    <span class="price-discount">@discount%</span>
                                                </div>
                                            }
                                            else
                                            {
                                                <div class="price-block">
                                                    <del class="price-old">£@item.MainPrice</del>
                                                </div>
                                            }
                                        </div>
                                    </div>
                                </div>
                            }
                        }

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
