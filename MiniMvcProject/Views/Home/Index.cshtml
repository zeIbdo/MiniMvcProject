                                <div class="card-image">

                                    <img src="@item.Images?.FirstOrDefault(s => s.IsMain == true)?.ImageUrl" style="height:300px; width:300px" alt="Product Image">


                                    <div class="hover-contents">
                                        <a href="product-details.html" class="hover-image">
                                            <img src="@item.Images?.FirstOrDefault(s => s.IsSecondary == true)?.ImageUrl" style="height:300px; width:300px" alt="Product Image">
                                        </a>
                                        <div class="hover-btns">
                                            <a data-product-id="@item.Id" onclick="addToBasket(@item.Id)" class="single-btn">
