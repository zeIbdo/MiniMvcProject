@model ProductUpdateViewModel


<div class="col-md-6 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Update Product</h4>
            <form class="forms-sample" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="All">
                </div>
                <div class="form-group">
                    <label>Name</label>
                    <input asp-for="Name" class="form-control" placeholder="name">
                </div>

                <div class="form-group">
                    <label>Brand</label>
                    <input asp-for="Brand" class="form-control" placeholder="parent id">
                </div>

                <div class="form-group">
                    <label>Code</label>
                    <input asp-for="Code" class="form-control" placeholder="parent id">
                </div>

                <div class="form-group">
                    <label>Description</label>
                    <input asp-for="Description" class="form-control" placeholder="parent id">
                </div>

                <div class="form-group">
                    <label>Main Price</label>
                    <input asp-for="MainPrice" class="form-control" placeholder="parent id">
                </div>

                <div class="form-group">
                    <label>Discount Price</label>
                    <input asp-for="DiscountPrice" class="form-control" placeholder="parent id">
                </div>

                <div class="form-group">
                    <label>Stock Amount</label>
                    <input asp-for="StockAmount" class="form-control" placeholder="parent id">
                </div>

                <div class="form-group">
                    <label>Reward Points</label>
                    <input asp-for="RewardPoints" class="form-control" placeholder="parent id">
                </div>

                <div class="form-group">
                    <label>Rating</label>
                    <input asp-for="Rating" class="form-control" placeholder="parent id">
                </div>

                <div class="form-group">
                    <label>In Stock</label>
                    <input asp-for="InStock" class="form-control" placeholder="parent id">
                </div>

                <div class="form-group">
                    <label>Categories</label>
                    <select asp-items="Model.Categories" asp-for="CategoryId" class="form-control" placeholder="Category"></select>
                </div>

                <div class="form-group">
                    <label>Remove Tags</label>
                    <select asp-items="Model.OldTags" asp-for="OldTagIds" class="form-control" placeholder="Tag"></select>
                </div>

                <div class="form-group">
                    <label>Add Tags</label>
                    <select asp-items="Model.NewTags" asp-for="NewTagIds" class="form-control" placeholder="Tag"></select>
                </div>

                <button type="submit" class="btn btn-primary mr-2">Submit</button>
                <a asp-controller="product" asp-action="index" class="btn btn-light">Cancel</a>
            </form>
        </div>
    </div>
</div>